{
    "compilerOptions": {
        "outDir": "build/main",
        "rootDir": "lib",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "declarationDir": "./build/@types",
        /* Debugging Options */
        "traceResolution": false,
        "listEmittedFiles": false,
        "listFiles": false,
        "pretty": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules/**"
    ],
    "compileOnSave": false
}