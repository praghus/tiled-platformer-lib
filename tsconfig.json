{
    "compilerOptions": {
        "outDir": "build/main",
        "rootDir": "lib",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "sourceMap": false,
        
        /* Debugging Options */
        "traceResolution": false,
        "listEmittedFiles": false,
        "listFiles": false,
        "pretty": true,
        
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "include": [
        "lib/**/*.ts", 
        "types/index.d.ts"    
    ],
    "exclude": [
        "node_modules/**"
    ],
    "compileOnSave": false
}